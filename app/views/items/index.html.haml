- model_class = Item
- @items.each do |item|
  %hr
  .row{style: "border-top: 1px;"}
    .col-xs-0.col-sm-2.col-md-3
    .col-xs-12.col-sm-8.col-md-6
      .row
        .col-xs-12.col-sm-2
          .row
            .col-xs-3.col-sm-0
            .col-xs-6.col-sm-12
              .image
                %img{ src: "#{item.thumbnail}", style: "display: block; margin-left: auto; margin-right: auto; width: 100%; max-width: 140px;" }
            .col-xs-3.col-sm-0
        .col-xs-12.col-sm-10
          %center
            .lead= link_to(item.title, item.url)
    .col-xs-0.col-sm-2.col-md-3